    <script id="level3Templ" type="text/html">
        {{each childMenus}}
        {{if !$value.childMenus}}
        <li class="target-li">
            <a _href="{{$value.url}}">
                <i class="{{$value.icon}}"></i>
                <cite>{{$value.name}}</cite>
            </a>
        </li>
        {{/if}}
        {{/each}}
    </script>
    <script id="level2Templ" type="text/html">
        {{each childMenus}}
        {{if ($value.childMenus==null || $value.childMenus.length == 0) }}
        <li class="target-li">
            <a _href="{{$value.url}}">
                <i class="{{$value.icon}}"></i>
                <cite>{{$value.name}}</cite>
            </a>
        </li>
        {{else }}
        <li class="target-li">
            <a href="javascript:;">
                <i class="{{$value.icon}}"></i>
                <cite>{{$value.name}}</cite>
                <i class="iconfont nav_right">&#xe697;</i>
            </a>
            <ul class="sub-menu">
                {{include 'level3Templ' $value}}
            </ul>
        </li>
        {{/if}}
        {{/each}}
    </script>
    <script id="baseTempl" type="text/html">
        {{if menu}}
        {{each menu}}
        <li class="target-li">
            <a href="javascript:;" class="item">
                <i class="{{$value.icon}}"></i>
                <cite>{{$value.name}}</cite>
                <i class="iconfont nav_right">&#xe697;</i>
            </a>
            <ul class="sub-menu">
                {{include 'level2Templ' $value}}
            </ul>
        </li>
        {{/each}}
        {{/if}}
    </script>

    <script>
        //百度统计可去掉
        //var _hmt = _hmt || [];
        (function () {
            //var hm = document.createElement("script");
            //hm.src = "https://hm.baidu.com/hm.js?b393d153aeb26b46e9431fabaf0f6190";
            //var s = document.getElementsByTagName("script")[0];
            //s.parentNode.insertBefore(hm, s);

            renderMenu();
